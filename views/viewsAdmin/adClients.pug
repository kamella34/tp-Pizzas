html
    head
        link(
            href="/css/stylsheet.css"
            rel="stylesheet" 
            )  
        link(
            href="/css/reset.css"
            rel="stylesheet" 
            )  
        link(
            href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/css/bootstrap.min.css"
            rel="stylesheet" 
            integrity="sha384-KK94CHFLLe+nY2dmCWGMq91rCGa5gtU4mk92HdvYe+M/SXH301p5ILy+dN9+nJOZ" 
            crossorigin="anonymous"
            )  
        title=Super

        body
            header(class=" p-3")
                div(class='position-relative')    
                    a(href='/accueilAdmin/connection'
                    class="position-absolute top-0 start-0 link-underline-light"
                    )
                        img(src="/image/pizza.svg" class="logo")
                        
                        
                    nav(class="position-absolute top-0 start-50 translate-middle-x") 
                        ul(class="d-flex flex-row gap-4")  
                            li 
                                a(href="/accueilAdmin/adUtilisateurs" 
                                class="link-underline-light link-warning "
                                ) Utilisateurs 
                            li 
                                a(href="/accueilAdmin/Pizzas"
                                class="link-underline-light link-warning"
                                ) Pizzas
                            li 
                                a(href="/accueilAdmin/Clients"
                                class="link-underline-light link-warning"
                                )  Clients
                            li 
                                a(href="/accueilAdmin/Commandes"
                                class="link-underline-light link-body-emphasis"
                                ) Commandes
                            li 
                                a(href="/accueilAdmin/Livreurs"
                                class="link-underline-light link-warning"
                                ) Livreurs 
                            li 
                                a(href=""
                                class="link-underline-light link-body-emphasis"
                                ) Ingr√©dients 
                            li 
                                a(href=""
                                class="link-underline-light link-body-emphasis"
                                ) statistiques 
                            li 
                                a(href=""
                                class="link-underline-light link-body-emphasis"
                                ) Promotions 
                            
                    div(class="position-absolute top-0 end-0")
                        a(href='/accueilAdmin/connection'
                        class='text-decoration-none link-warning me-2'
                        ) Mon compte
                        a(href='/accueilAdmin/deconnection'
                        class='text-decoration-none link-warning me-2'
                        ) Se deconnecter
                        
                        if utilConnected
                            p Bonjour #{utilConnected.prenom_utilisateur}


            main(class="position-absolute top-50 start-50 translate-middle")

                h2(class=" p-5 text-center") Clients
                table(
                    class='text-center d-flex justify-content-center m-5 '
                    ) 
                        tr(
                        class='border'
                        )  
                            td(
                            class='border border-black p-2'
                            ) Prenom
                            td(
                            class='border border-black p-2'
                            ) Nom
                            td(
                            class='border border-black p-2'
                            ) Adresse
                            td(
                            class='border border-black p-2'
                            ) Mail
                            td(
                            class='border border-black p-2'
                            ) Mdp
                            td(
                            class='border border-black p-2'
                            ) Role
                           

                        each client in clients     
                            tr(
                            class='border border-black text-info '
                            ) 
                                td(
                                class='border border-black p-2'
                                ) #{client.prenom_utilisateur}
                                td(
                                class='border border-black p-2'
                                ) #{client.nom_utilisateur}
                                td(
                                class='border border-black p-2'
                                ) #{client.adresse_utilisateur}
                                td(
                                class='border border-black p-2'
                                ) #{client.mail_utilisateur}
                                td(
                                class='border border-black p-2'
                                ) #{client.mdp_utilisateur}
                                td(
                                class='border border-black p-2'
                                ) #{client.role_utilisateur}
                                
