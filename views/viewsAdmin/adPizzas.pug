doctype html
html
    head
        link(
            href="/css/stylsheet.css"
            rel="stylesheet" 
            )  
        link(
            href="/css/reset.css"
            rel="stylesheet" 
            )  
        link(
            href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/css/bootstrap.min.css"
            rel="stylesheet" 
            integrity="sha384-KK94CHFLLe+nY2dmCWGMq91rCGa5gtU4mk92HdvYe+M/SXH301p5ILy+dN9+nJOZ" 
            crossorigin="anonymous"
            )  
        title=Super

        body
            header(class=" p-3")
                div(class='position-relative')    
                    a(href=''
                    class="position-absolute top-0 start-0 link-underline-light"
                    )
                        img(src="/image/pizza.svg" class="logo")
                        
                        
                    nav(class="position-absolute top-0 start-50 translate-middle-x") 
                        ul(class="d-flex flex-row gap-4")  
                            li 
                                a(href="/accueilAdmin/adUtilisateurs" 
                                class="link-underline-light link-warning "
                                ) Utilisateurs 
                            li 
                                a(href="/accueilAdmin/Pizzas"
                                class="link-underline-light link-warning"
                                ) Pizzas
                            li 
                                a(href="/accueilAdmin/Clients"
                                class="link-underline-light link-warning"
                                )  Clients
                            li 
                                a(href="/accueilAdmin/Commandes"
                                class="link-underline-light link-body-emphasis"
                                ) Commandes
                            li 
                                a(href="/accueilAdmin/Livreurs"
                                class="link-underline-light link-warning"
                                ) Livreurs 
                            li 
                                a(href=""
                                class="link-underline-light link-body-emphasis"
                                ) Ingrédients 
                            li 
                                a(href=""
                                class="link-underline-light link-body-emphasis"
                                ) statistiques 
                            li 
                                a(href=""
                                class="link-underline-light link-body-emphasis"
                                ) Promotions 
                            
                    div(class="position-absolute top-0 end-0")
                        a(href='/accueilAdmin/connection'
                        class='text-decoration-none link-warning me-2'
                        ) Mon compte
                        a(href='/accueilAdmin/deconnection'
                        class='text-decoration-none link-warning me-2'
                        ) Se deconnecter
                        
                        if utilConnected
                            p Bonjour #{utilConnected.prenom_utilisateur}

            main(class="position-absolute top-50 start-50 translate-middle")

            h2(class=" p-5 text-center") Pizzas
            h6(class="text-end me-5 text-success") Ajouter une pizza

            form(
            method="POST"
            class='mx-5 d-flex flex-row align-items-center border'
            )
                div(class='w-25')   
                    label Code 
                    input(
                        class='m-3'
                        type='text'
                        name='CodePizza'
                        checked
                        )
                div(class='w-25')
                    label Libéllé 
                    input(
                        class='m-3'
                        type='text'
                        name='libellePizza'
                        checked
                        )
                div(class='w-25')   
                    label Ingredient 
                    input(
                        class='m-3'
                        type='text'
                        name='ingredientPizza'
                        checked
                        ) 
                div(class='w-25')   
                    label Categorie 
                    input(
                        class='m-3'
                        type='text'
                        name='categoriePizza'
                        checked
                        )  
                div(class='w-25')   
                    label Prix
                    input(
                        class='m-3'
                        type='text'
                        name='prixPizza'
                        checked
                        )  
                div(class='w-25')   
                    label Version 
                    input(
                        class='m-3'
                        type='text'
                        name='versionPizza'
                        checked
                        )                                
                input(
                class='m-3 btn btn-success'
                type='submit'
                name='btn'
                id='btnAjoutPiz'
                checked
                ) 
            
            div(class="m-5 ")    
                h6(class="text-center") Toutes les pizzas
                table(
                class='text-center d-flex justify-content-center '
                ) 
                    tr(
                    class='border'
                    )  
                        td(
                        class='border border-black p-2'
                        ) Id 
                        td(
                        class='border border-black p-2'
                        ) code 
                        td(
                        class='border border-black p-2'
                        ) libellé
                        td(
                        class='border border-black p-2'
                        ) ingredients
                        td(
                        class='border border-black p-2'
                        ) Categorie
                        td(
                        class='border border-black p-2'
                        )  Prix
                        td(
                        class='border border-black p-2'
                        )  Modifier/Spprimer

                    each pizza in pizzas     
                        tr(
                        class='border border-black text-info '
                        ) 
                            td(
                            class='border border-black p-2'
                            ) #{pizza.id_pizza}
                            td(
                            class='border border-black p-2'
                            ) #{pizza.code_pizza}
                            td(
                            class='border border-black p-2'
                            ) #{pizza.libelle_pizza}
                            td(
                            class='border border-black p-2'
                            ) #{pizza.ingredient_pizza}
                            td(
                            class='border border-black p-2'
                            ) #{pizza.categorie_pizza}
                            td(
                            class='border border-black p-2'
                            ) #{pizza.prix_pizza}
                            td(class='border border-black p-2') 
                            
                                a(class='text-decoration-none link-warning', href=`/accueilAdmin/adMajPizza/${pizza.id_pizza}`) Modifier |
                                a(class='text-decoration-none link-warning', href=`/accueilAdmin/Pizzas/${pizza.id_pizza}`)  Supprimer
            
            div(class='m-5')
           
                h5 Pizzas crées en temps réel 
                div(class="border border-black p-5")
                    p(id='realTps')    


    script(src="/socket.io/socket.io.js")
    script(src="/client.js")   
                                    
                        
