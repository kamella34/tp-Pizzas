doctype html
html
    head
        link(
            href="/css/stylsheet.css"
            rel="stylesheet" 
            )  
        link(
            href="/css/reset.css"
            rel="stylesheet" 
            )  
        link(
            href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/css/bootstrap.min.css"
            rel="stylesheet" 
            integrity="sha384-KK94CHFLLe+nY2dmCWGMq91rCGa5gtU4mk92HdvYe+M/SXH301p5ILy+dN9+nJOZ" 
            crossorigin="anonymous"
            )  
        title=Super

        body
            header(class=" p-3")
                div(class='position-relative')    
                    a(href='/accueilAdmin/connection'
                    class="position-absolute top-0 start-0 link-underline-light"
                    )
                        img(src="/image/pizza.svg" class="logo")
                        
                        
                    nav(class="position-absolute top-0 start-50 translate-middle-x") 
                        ul(class="d-flex flex-row gap-4")  
                            li 
                                a(href="/accueilAdmin/adUtilisateurs" 
                                class="link-underline-light link-warning "
                                ) Utilisateurs 
                            li 
                                a(href="/accueilAdmin/Pizzas"
                                class="link-underline-light link-warning"
                                ) Pizzas
                            li 
                                a(href="/accueilAdmin/Clients"
                                class="link-underline-light link-warning"
                                )  Clients
                            li 
                                a(href="/accueilAdmin/Commandes"
                                class="link-underline-light link-body-emphasis"
                                ) Commandes
                            li 
                                a(href="/accueilAdmin/Livreurs"
                                class="link-underline-light link-warning"
                                ) Livreurs 
                            li 
                                a(href=""
                                class="link-underline-light link-body-emphasis"
                                ) Ingrédients 
                            li 
                                a(href=""
                                class="link-underline-light link-body-emphasis"
                                ) statistiques 
                            li 
                                a(href=""
                                class="link-underline-light link-body-emphasis"
                                ) Promotions 
                            
                     div(class="position-absolute top-0 end-0")
                        a(href='/accueilAdmin/connection'
                        class='text-decoration-none link-warning me-2'
                        ) Mon compte
                        a(href='/accueilAdmin/deconnection'
                        class='text-decoration-none link-warning me-2'
                        ) Se deconnecter
                        
                        if utilConnected
                            p Bonjour #{utilConnected.prenom_utilisateur}

            main(class="position-absolute top-50 start-50 translate-middle m-5")
            h2(class=' m-5 text-center') Modifier pizza
            form(
            method="POST"
            class='m-4 d-flex flex-column align-items-center'
            )
                div(class='w-25  d-flex flex-column')   
                    label Code 
                    input(
                        class='m-3'
                        type='text'
                        name='CodePizza'
                        value= majPizza.code_pizza
                        checked
                        ) 
                div(class='w-25  d-flex flex-column')
                    label Libéllé 
                    input(
                        class='m-3'
                        type='text'
                        name='libellePizza'
                        value=majPizza.libelle_pizza
                        checked
                        )
                div(class='w-25  d-flex flex-column')   
                    label Ingredient 
                    input(
                        class='m-3'
                        type='text'
                        name='ingredientPizza'
                        value=majPizza.ingredient_pizza
                        checked
                        ) 
                div(class='w-25 d-flex flex-column')   
                    label Categorie 
                    input(
                        class='m-3'
                        type='text'
                        name='categoriePizza'
                        value=majPizza.categorie_pizza
                        checked
                        )  
                div(class='w-25 d-flex flex-column')   
                    label Prix
                    input(
                        class='m-3'
                        type='text'
                        name='prixPizza'
                        value=majPizza.prix_pizza
                        checked
                        )  
                div(class='w-25 d-flex flex-column')   
                    label Version 
                    input(
                        class='m-3'
                        type='text'
                        name='versionPizza'
                        value=majPizza.version_pizza
                        checked
                        )                                
                    input(
                    class='m-3 btn btn-success'
                    type='submit'
                    name='btn'
                    checked
                    )  