                        if utilConnected
                            p Bonjour #{utilConnected.prenom_utilisateur}

            main(class="position-absolute top-50 start-50 translate-middle")
            h2(class=' m-5 text-center') Modifier Utilisateur
            form(
            method="POST"
            class='m-4 d-flex flex-column align-items-center'
            )
                div(class='w-25 d-flex flex-column')   
                        label Prenom
                        input(
                        class='m-3'
                        type='text'
                        name='PrenomUtil'
                        value=majUtil.prenom_utilisateur
                        checked
                        )
                div(class='w-25 d-flex flex-column')
                        label Nom
                        input(
                        class='m-3'
                        type='text'
                        name='NomUtil'
                        value=majUtil.nom_utilisateur
                        checked
                        )
                div(class='w-25 d-flex flex-column')   
                        label Adresse
                        input(
                        class='m-3'
                        type='text'
                        name='adresseUtil'
                        value=majUtil.adresse_utilisateur
                        ) 
                div(class='w-25 d-flex flex-column')   
                        label Mail
                        input(
                        class='m-3'
                        type='text'
                        name='mailUtil'
                        value=majUtil.mail_utilisateur
                        checked
                        )  
                div(class='w-25 d-flex flex-column')   
                    label Mot de passe
                    input(
                        class='m-3'
                        type='text'
                        name='mdpUtil'
                        value=majUtil.mdp_utilisateur
                        )
                div(class='w-25 d-flex flex-column')   
                    label Mot de passe
                    input(
                        class='m-3'
                        type='text'
                        name='roleUtil'
                        value=majUtil.role_utilisateur
                        )                                    
                    input(
                        class='m-3 btn btn-success'
                        type='submit'
                        name='btn'
                        checked
                        )  