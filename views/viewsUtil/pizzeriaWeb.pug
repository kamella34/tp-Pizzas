doctype html
html
    head
        link(
            href="/css/stylsheet.css"
            rel="stylesheet" 
            )  
        link(
            href="/css/reset.css"
            rel="stylesheet" 
            )  
        link(
            href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/css/bootstrap.min.css"
            rel="stylesheet" 
            integrity="sha384-KK94CHFLLe+nY2dmCWGMq91rCGa5gtU4mk92HdvYe+M/SXH301p5ILy+dN9+nJOZ" 
            crossorigin="anonymous"
            )  
        title=Super

        body
            header(class=" p-3")
                div(class='position-relative')    
                    a(href=''
                    class="position-absolute top-0 start-0 link-underline-light"
                    )
                        img(src="/image/pizza.svg" class="logo")
                        
                        
                    nav(class="position-absolute top-0 start-50 translate-middle-x") 
                        ul(class="d-flex flex-row gap-3")  
                            li
                                a(
                                href=""
                                class="link-underline-light link-body-emphasis"
                                ) Menus 
                            li 
                                a(
                                href=""
                                class="link-underline-light link-body-emphasis"
                                ) Entr√©es
                            li 
                                a(
                                href="/accueilClient/Pizzas"
                                class="link-underline-light link-warning"
                                ) Pizzas
                            li 
                                a(
                                href=""
                                class="link-underline-light link-body-emphasis"
                                ) Desserts
                            li 
                                a(
                                href=""
                                class="link-underline-light link-body-emphasis"
                                ) Boissons 
                            
                                
                    div(class="position-absolute top-0 end-0")
                      

                        if utilConnected
                            a(href='/accueilClient/deconnection'
                            class='text-decoration-none link-warning me-2'
                            ) Deconnection 
                            a(href=''
                            class='text-decoration-none link-body-emphasis'
                            ) Panier #{counts ? counts : '0'}      
                            p Bonjour #{utilConnected.prenom_utilisateur}
                        else 
                            a(href='/accueilClient/MonCompte'
                            class='text-decoration-none link-warning me-2'
                            ) Mon compte
                            a(href=''
                            class='text-decoration-none link-body-emphasis'
                            ) Panier #{counts ? counts : '0'}     
            
            main(class="position-absolute top-50 start-50 translate-middle ")

             div(class="border border-black m-2")
                h6(class="m-4 text-info") Inscription
                div
              
                    form(
                    action='/accueilClient/inscription'    
                    method="POST"
                    class='m-4 d-flex flex-row align-items-center'
                    )
                        div(class='w-25  d-flex flex-column text-center')   
                            label Prenom
                            input(
                            class='m-3'
                            type='text'
                            name='prenomClient'
                            
                            checked
                            ) 
                        div(class='w-25  d-flex flex-column text-center')
                            label nom 
                            input(
                            class='m-3'
                            type='text'
                            name='nomClient'
                            
                            checked
                            )
                        div(class='w-25  d-flex flex-column text-center')        
                            label mail 
                            input(
                            class='m-3'
                            type='text'
                            name='mailClient'
                            
                            checked
                            )        
                        div(class='w-25  d-flex flex-column text-center')   
                            label adresse
                                input(
                            class='m-3'
                            type='text'
                            name='adresseClient'
                            
                                hecked
                                )
                        div(class='w-25  d-flex flex-column text-center')     
                            label mdp
                            input(
                            class='m-3'
                            type='text'
                            name='mdpClient'
                            
                            checked
                            )    

                        input(
                        class='m-3 btn btn-success'
                        type='submit'
                        name='btn'
                        checked
                            )    
                            
             div(class="border border-black m-2")                 
                h6(class="m-4 text-info") Connexion
                div
                
                    form(
                    action='/accueilClient/connection'
                    method="POST"
                    class='m-4 d-flex flex-column align-items-center'
                    )
                        
                        div(class='w-25  d-flex flex-column text-center')   
                            label(
                            for="mail_utilisateur"
                            class=" m-2"
                            ) Adresse mail
                            input(
                            type ="text" 
                            id='mail_utilisateur' 
                            name='mailCli'
                            )
                        div(class=' w-25 d-flex flex-column text-center')       
                            label(
                            for="mdp_utilisateur"
                            class=" m-2"
                            ) Mot de passe
                            input(
                            type="text" 
                            id='mdp_utilisateur' 
                            name='mdpCli' 
                            )
                        
                        
                            input(
                            class='m-4 btn btn-success'
                            type='submit'
                            name='btn'
                            checked
                            )       
        
                
        script(src="/socket.io/socket.io.js")
        script(src="/client.js")
        