                        class='text-decoration-none link-body-emphasis'
                        ) Panier       

        
            main(class="position-absolute top-50 start-50 translate-middle")

                h2(class=" p-5 text-center") Pizzas

              
                form(
                method="POST"
                class='m-4 d-flex flex-column align-items-center'
                )
                    div(class='w-25  d-flex flex-column')   
                        label Prenom
                        input(
                            class='m-3'
                            type='text'
                            name='prenomClient'
                            value=insertClient.prenom_client
                            checked
                            ) 
                    div(class='w-25  d-flex flex-column')
                        label nom 
                        input(
                            class='m-3'
                            type='text'
                            name='nomClient'
                            value=insertClient.nom_client
                            checked
                            )
                    div(class='w-25  d-flex flex-column')        
                        label mail 
                    input(
                            class='m-3'
                            type='text'
                            name='mailClient'
                            value=insertClient.mail_client
                            checked
                            )        
                    div(class='w-25  d-flex flex-column')   
                        label adresse
                        input(
                            class='m-3'
                            type='text'
                            name='adresseClient'
                            value=insertClient.adresse_client
                            checked
                            )
                    div(class='w-25  d-flex flex-column')     
                        label mdp
                        input(
                            class='m-3'
                            type='text'
                            name='mdpClient'
                            value=insertClient.mdp_client
                            checked
                            )    

                        input(
                            class='m-3 btn btn-success'
                            type='submit'
                            name='btn'
                            checked
                            )     
                
    
          

    